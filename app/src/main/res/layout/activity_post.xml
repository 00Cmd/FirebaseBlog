<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.macbookair.firebaseblog.Activitys.PostActivity">

    <ImageButton
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@color/white"
        android:layout_alignParentTop="true"
        android:id="@+id/btnAddImage"
        android:maxHeight="250dp"
        android:background="@mipmap/add_btn" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnAddImage">

        <EditText
            android:hint="Title"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:background="@drawable/input_outline"
            android:id="@+id/addPostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp" />

        <EditText
            android:textStyle="bold"
            android:hint="Description"
            android:background="@drawable/input_outline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/addPostDesc"
            android:layout_below="@+id/addPostTitle"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="15dp"
            android:paddingBottom="20dp" />

        <Button
            android:textColor="@color/whiteNonTransparent"
            android:background="@color/colorPrimary"
            android:text="Submit Post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmit"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</RelativeLayout>
